#ifndef CH16_03_HEADER
#define CH16_03_HEADER
#include <string>

class Quote {
public:
    Quote() = default;
    Quote(const std::string& s, doule p):bookNo(s), price(p) {}
    
    std::string isbn() 
    {
        return bookNo;
    }
    
    virtual double net_price(std::size_t n) const 
    {
        return n * price;
    }
    
    virtual ~Quote() = default;
    
private:
    std::string bookNo;
protected:
    double price = 0.0;
}

#endif // CH16_03_HEADER

